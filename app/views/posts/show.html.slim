= image_tag @post.image if @post.image.attached?

h1 = @post.title

.star-ratings-sprite
  span.star-ratings-sprite-rating style="width:#{@post.rate}0%"
= @user.username
= simple_format @post.review

= link_to '編集', edit_post_path, class: 'btn btn-primary'
= link_to '削除', post_path, method: :delete, class: 'btn btn-danger', data: { confirm: '削除してよろしいですか？' }

= render partial: 'like_action', locals: { post: @post, like: current_user.likes.find_by(post: @post) }

h5 コメント
#comments_area
  = render partial: 'comments/index', locals: { comments: @comments }
- if user_signed_in?
  = render partial: 'comments/form', locals: { comment: @comment, post: @post }
